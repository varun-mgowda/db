<%- include("partials/header")%>
<style media="screen">
  #bike{
padding-top:7px;
padding-bottom:7px;
  margin: 16px 0 16px 0;
  box-sizing: border-box
  text-align:center;
  }
  .anchor{
    padding:8px;


    border-color:black;
    border-radius:3px;

  }
